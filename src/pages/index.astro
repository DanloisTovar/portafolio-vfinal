---
import Welcome from '../components/Welcome.astro';
import Counter from '../components/Counter';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Portafolio V3">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="container mx-auto px-4 py-16">
      <h1 class="text-5xl font-bold text-center mb-12 text-gray-900">Astro + React + Tailwind</h1>

      <div class="grid gap-8 md:grid-cols-2">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <Welcome />
        </div>

        <div class="bg-white rounded-lg shadow-lg p-8 flex items-center justify-center">
          <Counter client:load />
        </div>
      </div>

      <div class="mt-12 text-center">
        <p class="text-gray-600">
          âœ¨ Configurado con ESLint, Prettier, Stylelint, Vitest, Nightwatch, Husky y Commitlint
        </p>
      </div>
    </div>
  </main>
</Layout>
